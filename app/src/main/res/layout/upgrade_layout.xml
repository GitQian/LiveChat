<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:text="版本更新提示"
        android:textColor="#001F33"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/version_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:singleLine="true"
        android:text="软件有新版本了，请升级！"
        android:textColor="#001F33"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#DADCD9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/upgrade_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_linear_item"
            android:singleLine="true"
            android:text="下载"
            android:textColor="#001F33" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#DADCD9" />

        <Button
            android:id="@+id/upgrade_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_linear_item"
            android:singleLine="true"
            android:text="退出"
            android:textColor="#001F33" />
    </LinearLayout>

</LinearLayout>